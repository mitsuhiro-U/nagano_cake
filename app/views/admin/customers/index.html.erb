
<h3>会員一覧</h3>

<table>
    <thead>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
            <tr>
                <td><%= customer.id %></td>
                <%= link_to admin_customers_path(customer.id), method: :get do %>
                    <td><%= "costomer.last_name" + "costomer.first-name" %></td>
                <% end %>
                <td><%= costomer.email %></td>
                <td>
                    <% if customer.is_active %>
                        有効
                    <% else %>
                        退会
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>