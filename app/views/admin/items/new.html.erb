
<h3>商品新規登録</h3>

<%= form_with model: @item, url:admin_items_path, local:true do |f| %>

    <%= f.label :image, "商品画像" %>
    <%= f.attachment_field :image %><br>

    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %><br>

    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction %><br>

    <%= f.label :genre, "ジャンル" %>
    <%= f.collection_select(:genre_id, @genres, :id, :name) %><br>

    <%= f.label :price, "税抜価格" %>
    <%= f.text_field :price %><br>

    <%= f.label :is_active, "販売ステータス" %>
    <%= f.radio_button :is_active, true, checked: true %>販売中<%= f.radio_button :is_active, false %>販売停止中<br>

    <%= f.submit "新規登録" %>
    
<% end %>
