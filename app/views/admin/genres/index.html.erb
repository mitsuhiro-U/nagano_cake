
<h3>ジャンル一覧</h3>

<rabel>ジャンル名</rabel>
<%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録" %>
<% end %>
<br>
<table>
    <thead>
        <tr>
            <th>ジャンル</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
            </tr>
        <% end %>
    </tbody>
    
</table>

