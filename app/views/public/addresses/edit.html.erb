<div>
    <h3>配送先編集</h3>
    <%= form_with model: @address, local:true do |f| %>
    <div class="row">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
    </div>
    <div class="row">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
    </div>
    <div class="row">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
        <%= f.submit "変更内容を保存" %>
    </div>
    
    <% end %>
</div>